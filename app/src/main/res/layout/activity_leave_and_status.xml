<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.views.HostelLeave">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="102dp"
            android:layout_height="96dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/una" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginStart="102dp"
            android:gravity="center"
            android:text="@string/ksm"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="120dp">

        <TextView
            android:id="@+id/dateapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="20dp"
            android:autofillHints="" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="222dp"
            android:layout_height="31dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:text="@string/hostel_leave_form"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="449dp"
        android:layout_marginTop="190dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/name_of_the_student"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/namest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="20dp"

            android:gravity="center"
            android:text="@string/textview"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="63dp"
            android:gravity="center_vertical"
            android:text="@string/_2_roll_no"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/stroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="184dp"
            android:layout_marginTop="63dp"

            android:gravity="center"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="107dp"
            android:gravity="center_vertical"
            android:text="@string/_3_room_no_hostel_name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="151dp"
            android:gravity="center_vertical"
            android:text="@string/_4_purpose_of_leave"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/purleave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="194dp"
            android:gravity="center"

            android:layout_marginTop="151dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="198dp"
            android:gravity="center_vertical"
            android:text="@string/_5_date_and_time"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/datedep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="200dp"
            android:autofillHints=""
            android:gravity="center"

            android:hint="@string/hint_date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timedep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:hint="@string/hint_time"
            android:inputType="time"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="250dp"
            android:text="@string/date_and_time_of_expected_arrival"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/datearr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="250dp"
            android:autofillHints=""
            android:gravity="center"
            android:hint="@string/hint_date"
            android:inputType="date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timearr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="250dp"
            android:gravity="center"
            android:hint="@string/hint_time"
            android:inputType="time"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="176dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="300dp"
            android:text="@string/_7_no_of_days_of_leave_required"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:layout_marginTop="300dp"
            android:gravity="center"
            android:inputType="number"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/st1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="350dp"
            android:gravity="center_vertical"
            android:text="@string/_8_contact"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="395dp"
            android:gravity="center_vertical"
            android:text="@string/_9_address"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="350dp"
            android:gravity="center"
            android:text="TextView"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/staddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:gravity="center"
            android:layout_marginTop="395dp"
            android:text="TextView"

            android:textSize="16sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:text="Status :"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:text="@string/textview" />

        <androidx.cardview.widget.CardView
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="26dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient1">

                <ImageView
                    android:id="@+id/cdact"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="115dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/baseline_calendar_month_24"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageViewl"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="205dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/baseline_notifications_active_24"
                    tools:ignore="ContentDescription,HardcodedText" />

                <ImageView
                    android:id="@+id/homeact"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/baseline_home_24"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>